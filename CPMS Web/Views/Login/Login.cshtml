<script type="text/javascript">
    var apiurl = 'https://localhost:7128/api/Login';
    $(document).ready(function () {
        $('#CompEmailAddress').val('');
        $('#CompPassword').val('');
        $('#CollEmailAddress').val('');
        $('#CollPassword').val('');
        $('#CompanyForm').submit(function (e) {
            e.preventDefault();
            var requestdata = { Email: $('#CompEmailAddress').val().trim(), Password: $('#CompPassword').val().trim(), Type: 2 };
            $.ajax({
                url: apiurl,
                contentType: 'application/json; charset=utf-8',
                type: 'Post',
                data: JSON.stringify(requestdata),
                success: function (result) {
                    alert('successfully received data ');
                    console.log(result);
                    location.href = $("#CompanyURL").val();
                },
                error: function () {
                    alert('failed to receive the data');
                    console.log('failed ');
                    location.href = url;
                }
            })
        })

        $('#CollegeForm').submit(function (e) {
            e.preventDefault();
            var requestdata = { Email: $('#CollEmailAddress').val().trim(), Password: $('#CollPassword').val().trim(), Type: 1 };
            $.ajax({
                url: apiurl,
                contentType: 'application/json; charset=utf-8',
                type: 'Post',
                data: JSON.stringify(requestdata),
                success: function (result) {
                    alert('successfully received data ');
                    console.log(result);
                    location.href = $("#CollegeURL").val();
                },
                error: function () {
                    alert('failed to receive the data');
                    console.log('failed ');
                    location.href = url;
                }
            })
        })

        $(".tab-nav-wrapper li.active").click();
        $($(".tab-nav-wrapper li.active a").attr("href")).show();

        $(".tab-nav-wrapper li").click(function (e) {
            $('#CollEmailAddress').val('');
            $('#CollPassword').val('');
            $('#CompEmailAddress').val('');
            $('#CompPassword').val('');
            e.preventDefault();
            e.stopPropagation();

            $(".tab-nav-wrapper li").removeClass("active");
            $(this).addClass("active");

            var target = $(this).find("a").attr("href");
            $(".tab-content-wrapper").find(".tab-content").hide();
            $(".tab-content-wrapper").find(target).show();
        })
    })
</script>
    <div class="container">
        <div class="header">
