@model CPMS.Web.Models.Login

@{
    ViewData["Title"] = "Login";
}
@Html.Hidden("CompanyURL", Url.Action("CompanyCreation", "Company"));
@Html.Hidden("CollegeURL", Url.Action("CollegeCreation", "College"));
<style>
    .tabs {
        height: 1475px;
        width: 100%;
        text-align: left;
    }

    .tab-nav-wrapper {
        width: 100%;
        overflow-x: auto;
        position: relative !important;
        z-index: 999 !important;
        top: 3px;
    }

    .tabs ul {
        display: block;
        /*width: max-content;*/
        overflow-y: hidden;
        margin: 0px;
        padding-inline-start: 5px;
    }

        .tabs ul li {
            display: inline-block;
            border: 1px solid grey;
            border-bottom: 3px solid black;
            background-color: white;
        }

            .tabs ul li.active {
                border: 1px solid black;
                border-bottom: 3px solid white;
            }

            .tabs ul li a {
                text-decoration: none;
                color: black;
                padding: 10px;
                line-height: 25px;
                position: relative;
                font-weight: bold;
            }

    .tab-content-wrapper {
        position: relative !important;
        z-index: 1 !important;
        border: 5px solid black;
        padding: 20px;
        min-height: 40px;
    }
</style>
<script type="text/javascript">
    var apiurl = 'https://localhost:7128/api/Login';
    $(document).ready(function () {
        $('#CompEmailAddress').val('');
        $('#CompPassword').val('');
        $('#CollEmailAddress').val('');
        $('#CollPassword').val('');
        $('#CompanyForm').submit(function (e) {
            e.preventDefault();
            var requestdata = { Email: $('#CompEmailAddress').val().trim(), Password: $('#CompPassword').val().trim(), Type: 2 };
            $.ajax({
                url: apiurl,
                contentType: 'application/json; charset=utf-8',
                type: 'Post',
                data: JSON.stringify(requestdata),
                success: function (result) {
                    alert('successfully received data ');
                    console.log(result);
                    location.href = $("#CompanyURL").val();
                },
                error: function () {
                    alert('failed to receive the data');
                    console.log('failed ');
                    location.href = url;
                }
            })
        })

        $('#CollegeForm').submit(function (e) {
            e.preventDefault();
            var requestdata = { Email: $('#CollEmailAddress').val().trim(), Password: $('#CollPassword').val().trim(), Type: 1 };
            $.ajax({
                url: apiurl,
                contentType: 'application/json; charset=utf-8',
                type: 'Post',
                data: JSON.stringify(requestdata),
                success: function (result) {
                    alert('successfully received data ');
                    console.log(result);
                    location.href = $("#CollegeURL").val();
                },
                error: function () {
                    alert('failed to receive the data');
                    console.log('failed ');
                    location.href = url;
                }
            })
        })

        $(".tab-nav-wrapper li.active").click();
        $($(".tab-nav-wrapper li.active a").attr("href")).show();

        $(".tab-nav-wrapper li").click(function (e) {
            $('#CollEmailAddress').val('');
            $('#CollPassword').val('');
            $('#CompEmailAddress').val('');
            $('#CompPassword').val('');
            e.preventDefault();
            e.stopPropagation();

            $(".tab-nav-wrapper li").removeClass("active");
            $(this).addClass("active");

            var target = $(this).find("a").attr("href");
            $(".tab-content-wrapper").find(".tab-content").hide();
            $(".tab-content-wrapper").find(target).show();
        })
    })
</script>
<h1>Login</h1>
<hr />
<div class="tabs">
    <div class="tab-nav-wrapper">
        <ul>
            <li class="active"><a href="#tab1">Company </a></li>
            <li><a href="#tab2">College</a></li>
        </ul>
    </div>
    <div class="tab-content-wrapper">
        <div id="tab1" class="tab-content" style="display:none;">
            <div class="row">
                <div class="col-md-4">
                    <form id="CompanyForm" name="CompanyForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" id="CompEmailAddress" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" id="CompPassword" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top:15px;">
                            <input type="submit" value="Sign In" class="btn btn-primary" onclick="" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="tab2" class="tab-content" style="display:none;">
            <div class="row">
                <div class="col-md-4">
                    <form id="CollegeForm" name="CollegeForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" id="CollEmailAddress" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" type="password" id="CollPassword" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top:15px;">
                            <input type="submit" value="Sign In" class="btn btn-primary" onclick="" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
